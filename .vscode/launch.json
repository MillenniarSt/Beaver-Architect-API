{
    "version": "0.2.0",
    "console": "integratedTerminal",
    "configurations": [
        {
            "type": "bun",
            "request": "launch",
            "name": "Debug File with Bun",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "watchMode": false,
            "internalConsoleOptions": "neverOpen",
            "runtimeArgs": [
                "--inspect"
            ]
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Run File",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "noDebug": true,
            "watchMode": false,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "bun",
            "request": "attach",
            "name": "Attach Bun",
            "url": "ws://localhost:6499/",
            "stopOnEntry": false,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
